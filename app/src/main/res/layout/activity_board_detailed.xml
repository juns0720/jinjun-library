<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ll_chat"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:background="@android:color/holo_green_light"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5sp"
            android:text="TextView"
            android:textColor="#000000"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_trade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFEB3B"
            android:text="거래하기"
            android:textColor="#000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/ll_chat"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0sp"
            android:layout_marginRight="0sp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_marginTop="10sp"
                />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="360sp"
                android:layout_height="440sp"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="20sp"
                android:layout_marginRight="20sp"
                />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="30sp"
                android:layout_marginRight="20sp"
                android:text="닉네임" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="30sp"
                android:layout_marginRight="20sp"
                android:text="맥도날드 팝니다"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="10sp"
                android:layout_marginRight="20sp"
                android:text="Lorem ipsum sit ametLorem ipsum sit ametLorem ipsum sit ametLorem ipsum sit ametLorem ipsum sit ametLorem ipsum sit ametLorem ipsum sit ametLorem ipsum sit ametLorem ipsum sit ametLorem ipsum sit ametLorem ipsum sit ametLorem ipsum sit ametLorem ipsum sit amet Lorem ipsum sit ametLorem ipsum sit ametLorem ipsum sit ametLorem ipsum sit ametLorem ipsum sit ametLorem ipsum sit ametLorem ipsum sit ametLorem ipsum sit ametLorem ipsum sit ametLorem ipsum sit ametLorem ipsum sit ametLorem ipsum sit ametLorem ipsum sit ametLorem ipsum sit ametLorem ipsum sit ametLorem ipsum sit ametLorem ipsum sit ametLorem ipsum sit ametLorem ipsum sit ametLorem ipsum sit ametLorem ipsum sit ametLorem ipsum sit ametLorem ipsum sit ametLorem ipsum sit ametLorem ipsum sit ametLorem ipsum sit ametLorem ipsum sit ametLorem ipsum sit ametLorem ipsum sit ametLorem ipsum sit amet"
                android:textSize="20sp" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>